{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitThis": true,
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*",
    "./typings/*"
  ],
  "exclude": [
    "./src/counter/__specs__"
  ]
}